<h6>Admin's Dashboard</h6>
<h3>Welcome {{name}}</h3>
<p>Here are the pending jobs</p>
{{#if jobs}}
<table class="striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Date</th>
      <th>Status</th>
      <th>User's Name</th>
      <th class="center-align">Publish/Deny</th>
      <th class="center-align">Edit/Delete</th>
    </tr>
  </thead>
  <tbody>
    {{#each jobs}}
    <tr>
      <td><a href="/jobs/{{id}}">{{title}}</a></td>
      <td>{{formatDate createdAt "Do MMMM YYYY, hh:mm:ss a"}}</td>
      <td><span class="dash-status">{{status}}</span></td>
      <td>{{user.dataValues.displayName}}</td>
      <td class="center-align">
        <form action="/access/granted/{{id}}?_method=PUT" method="POST">
          <button type="submit" class="btn teal">
            <i class="far fa-check-circle"></i>
          </button>
        </form>

        <form action="/access/denied/{{id}}?_method=PUT" method="POST">
          <button type="submit" class="btn orange">
            <i class="far fa-times-circle"></i>
          </button>
        </form>
      </td>
      <td class="center-align">
        <a href="/jobs/edit/{{id}}" class="btn blue">
          <i class="fas fa-pen-square"></i>
        </a>

        <form action="/jobs/{{id}}?_method=DELETE" method="POST" id="delete-form">
          <button type="submit" class="btn red">
            <i class="fas fa-trash"></i>
          </button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
{{else}}
<p>There are no pending jobs</p>
{{/if}}